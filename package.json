{
  "name": "@ktsstudio/create-mediaproject",
  "version": "1.0.3",
  "author": "KTS Studio",
  "license": "MIT",
  "description": "Package-template for kts special project frontend",
  "scripts": {
    "lint": "eslint src --fix",
    "codestyle": "prettier src --write \"*.{ts,js}?(x)\"",
    "start": "ts-node ./src/index.ts",
    "clear": "rm -rf ./dist",
    "copy-templates": "cp -r ./src/templates ./dist/templates",
    "build": "yarn clear && tsc && yarn copy-templates",
    "precommit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}?(x)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bin": "./dist/index.js",
  "dependencies": {
    "chalk": "^4.1.0",
    "ejs": "^3.1.5",
    "inquirer": "^7.3.3",
    "shelljs": "^0.8.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.5",
    "@types/inquirer": "^7.3.1",
    "@types/shelljs": "^0.8.8",
    "@types/yargs": "^16.0.0",
    "eslint": "7.17.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.3"
  }
}
